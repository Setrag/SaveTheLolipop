package saveTheLolipop.moteur.gestionnaireEvenement;

import org.lwjgl.input.Keyboard;
import org.lwjgl.input.Mouse;

import saveTheLolipop.moteur.utilitaire.ConfigurationClavierSouris;

public class GestionnaireInput {
	//attribut (evenement assosier a l'utilisation du clavier souris)
	private boolean enMouvement;
	private boolean enAttaque;
	private ConfigurationClavierSouris conf;
	
	public GestionnaireInput() {
		enAttaque = false;
		enMouvement = false;
		conf = new ConfigurationClavierSouris();
	}
	//gestion des entrer clavier souris
	public void gestionnaireClavier() {
		while (Keyboard.next()){
			//ici les actions liers aux différente entrée claviers
			enMouvement = utiliseToucheClavier(conf.moveUp) || utiliseToucheClavier(conf.moveDown) 
			|| utiliseToucheClavier(conf.moveLeft) || utiliseToucheClavier(conf.moveRight);
		}
	}
	
	public void gestionnaireSouris() {
		while (Mouse.next()){
			//ici les actions liers aux différente entrée souris
			enAttaque = Mouse.isButtonDown(conf.attaqueBase);
		}
	}
	
	private boolean utiliseToucheClavier(int key) {
		if (Keyboard.getEventKeyState()) {
			if (Keyboard.getEventKey() == key) {
				return true;
			} else {
				return false;
			}
		}
		return false;
	}

	
	//////////////////////////////
	// 		getteur-setteur		//
	//////////////////////////////
	public boolean isEnMouvement() {
		return enMouvement;
	}

	public void setEnMouvement(boolean enMouvement) {
		this.enMouvement = enMouvement;
	}

}
