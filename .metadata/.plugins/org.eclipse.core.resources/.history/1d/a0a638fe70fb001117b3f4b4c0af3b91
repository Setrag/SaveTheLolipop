package saveTheLolipop.moteur.elements.carte;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.List;

import saveTheLolipop.moteur.elements.Elements;
import saveTheLolipop.moteurGraphique.donneesAffichage.utilitaire.EnumType;

public class Carte extends Elements{
	private EnumType fond;
	private List<Elements> decors;
	
	public Carte() {
		chargeurCarte(0);
	}
	public Carte(int codeCarte) {
		chargeurCarte(codeCarte);
	}
	
	@Override
	public void affiche() {
		// TODO Auto-generated method stub
	}

	@Override
	public void deplacement(int delta) {
		// TODO Auto-generated method stub		
	}
	
	private void chargeurCarte(int codeCarte) {
		// charge la carte correspondant au code depuis un fichier
		try {
			FileInputStream fichier = new FileInputStream(fichierCarte);
			ObjectInputStream ois = new ObjectInputStream(fichier);
			Carte personne = (Carte) ois.readObject();
		}	
		catch (java.io.IOException e) {
			e.printStackTrace();
		}
		catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	}
	
}
