package saveTheLolipop.moteur.gestionnaireEvenement;

import org.lwjgl.input.Keyboard;
import org.lwjgl.input.Mouse;

import saveTheLolipop.moteur.utilitaire.ConfigurationClavierSouris;

public class GestionnaireInput {
	//attribut (evenement assosier a l'utilisation du clavier souris)
	private static boolean enMouvement;
	private static boolean enAttaque;
	private static ConfigurationClavierSouris conf;
	
	//gestion des entrer clavier souris
	public static void gestionnaireClavier() {
		while (Keyboard.next()){
			//ici les actions liers aux différente entrée claviers
			enMouvement = utiliseToucheClavier(conf.moveUp) || utiliseToucheClavier(conf.moveDown) 
			|| utiliseToucheClavier(conf.moveLeft) || utiliseToucheClavier(conf.moveRight);
		}
	}
	
	public static void gestionnaireSouris() {
		while (Mouse.next()){
			//ici les actions liers aux différente entrée souris
			enAttaque = Mouse.isButtonDown(conf.attaqueBase);
		}
	}
	
	private static boolean utiliseToucheClavier(int key) {
		if (Keyboard.getEventKeyState()) {
			if (Keyboard.getEventKey() == key) {
				return true;
			} else {
				return false;
			}
		}
		return false;
	}

	public static boolean isEnMouvement() {
		return enMouvement;
	}

	public static void setEnMouvement(boolean enMouvement) {
		GestionnaireInput.enMouvement = enMouvement;
	}

	public static boolean isEnAttaque() {
		return enAttaque;
	}

	public static void setEnAttaque(boolean enAttaque) {
		GestionnaireInput.enAttaque = enAttaque;
	}

	public static void setConf(ConfigurationClavierSouris conf) {
		GestionnaireInput.conf = conf;
	}
	
	
}
